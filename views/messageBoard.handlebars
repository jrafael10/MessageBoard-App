<div class="container">
    <div class="row form-group">
        <div class="col-xs-12 col-md-offset-2 col-md-8 col-lg-8 col-lg-offset-2">
            <div class="panel panel-primary">
                <div class="panel-heading">
                    <span class="glyphicon glyphicon-comment"></span> Message board
                    <div class="btn-group pull-right">
                        <button type="button" class="btn btn-default btn-xs dropdown-toggle" data-toggle="dropdown">
                            <span class="glyphicon glyphicon-chevron-down"></span>
                        </button>
                        <ul class="dropdown-menu slidedown">
                            <li><a href="http://www.jquery2dotnet.com"><span class="glyphicon glyphicon-refresh">
                            </span>User Posts</a></li>
                            <li><a href="http://www.jquery2dotnet.com"><span class="glyphicon glyphicon-ok-sign">
                            </span>Settings</a></li>

                            <!--
                            <li><a href="http://www.jquery2dotnet.com"><span class="glyphicon glyphicon-remove">
                            </span>Busy</a></li>
                            <li><a href="http://www.jquery2dotnet.com"><span class="glyphicon glyphicon-time"></span>
                                Away</a></li>
                            <li class="divider"></li>
                            -->
                            <li><a href="http://www.jquery2dotnet.com"><span class="glyphicon glyphicon-off"></span>
                                Logout</a></li>
                        </ul>
                    </div>
                </div>
                <div class="panel-body body-panel">
                    <ul class="chat">
                        {{#each messages}}
                            <li><div> {{uname}}:<span style = "color: {{../color}};">{{msg}}</span> <br> <span id = "dateandtime">({{DateAndTime}})</span></div></li>
                        {{/each}}

                    </ul>
                </div>
                <div class="panel-footer clearfix">
               <form action = "processMessage" method = "POST">

                   <textarea style ="color: {{color}};" maxlength="140" id="usermessage" class="form-control" rows="3" name="usermessage"></textarea>
                    <span class="col-lg-6 col-lg-offset-3 col-md-6 col-md-offset-3 col-xs-12" style="margin-top: 10px">
                        {{#if user.canPost}}
                        <button type = "submit" name = "sendButton" value = "message" class="btn btn-warning btn-lg btn-block" id="btn-chat">Post</button>
                        {{else}}
                            <button  type = "button" disabled name = "sendButton" value = "message" class="btn btn-warning btn-lg btn-block" id="btn-chat">Post</button>
                        {{/if}}
                    </span>
                </form>
                </div>
            </div>
        </div>
    </div>
</div>

